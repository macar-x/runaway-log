    <replace_button>替换</replace_button>
    <cancel_button>取消</cancel_button>
  </import_dialog>

  <!-- Statistics -->
  <statistics>
    <title>统计信息</title>
    <total>总计</total>
    <average_per_day>每日平均</average_per_day>
