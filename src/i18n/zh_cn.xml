    <longest_streak>最长连续</longest_streak>
    <most_active_day>最活跃日</most_active_day>
    <peak_time>高峰时间</peak_time>
    <peak_day>高峰日</peak_day>
  </statistics>

  <!-- Error Messages -->
  <errors>
    <import_failed>❌ 导入失败：{error}</import_failed>
    <import_merged>✅ 已合并 {count} 条新的跑路记录！</import_merged>
    <import_replaced>✅ 已替换为 {count} 条跑路记录！</import_replaced>
